@model IEnumerable<OpenSooq.Models.Role>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
           

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            

            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                <a class="btn btn-default"asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
