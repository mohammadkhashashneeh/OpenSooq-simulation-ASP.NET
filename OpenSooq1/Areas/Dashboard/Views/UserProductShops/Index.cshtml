@model IEnumerable<OpenSooq.Models.ProductShop>

@{
    ViewData["Title"] = "Index";
    int SN = 0;
}




<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                SN
            </th>
            <th>
                Product Name
            </th>
            
            <th>
                ProductImg
            </th>
            <th>
                Price
            </th>
            <th>
                Shop
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            SN = SN + 1;
            <tr>
                <td>@SN</td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
             
                <td>
                    <img class="img-fluid" style="border-radius:20%;" width="100" height="100" src=@Url.Content("~/newImg/" + item.ProductImg) asp-append-version="true">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shop.ShopName)
                </td>
               
                <td>
                    <a class="btn btn-primary"asp-action="Edit" asp-route-id="@item.ProductShopId">Edit</a> |
                    <a class="btn btn-default"asp-action="Details" asp-route-id="@item.ProductShopId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductShopId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
