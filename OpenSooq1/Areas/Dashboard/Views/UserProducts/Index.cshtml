@model IEnumerable<OpenSooq.Models.Product>

@{
    ViewData["Title"] = "Index";
}




<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            
            <th>
                Product Image
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
              
                <td>
                    <img class="img-fluid" style="border-radius:20%;" width="100" height="100" src=@Url.Content("~/newImg/" + item.ProductImg) asp-append-version="true">
                </td>
                
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                    <a class="btn btn-default"asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
