@model IEnumerable<Shop>

<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <a asp-route-id="@item.ShopId" asp-action="ShopDetails" class="cat-img position-relative overflow-hidden mb-3">
                            <img class="img-fluidb w-100" src=@Url.Content("~/newImg/" +item.ShopImage) asp-append-version="true">
                        </a>
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@item.ShopName</h6>
                        <div class="d-flex justify-content-center">
                            <h6>@item.ShopCity</h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a asp-route-id="@item.ShopId" asp-action="ShopDetails" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a asp-route-id="@item.ShopId" asp-action="ProductsShop" class="btn btn-sm text-dark p-0"><i class="fas fa-shop text-primary mr-1" ></i>View Products</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>